<Window Name="mainWindow"
		x:Class="ScreenParameterInfo.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:ScreenParameterInfo"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		Title="MainWindow"
		Width="750"
		Height="450"
		MinWidth="750"
		MinHeight="450"
		DataContext="{Binding ElementName=mainWindow}"
		mc:Ignorable="d"
		Background="#FF2C2C2C"
		>
	<Grid
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition Width="100" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Rectangle
				Grid.Column="1"
				Grid.Row="0"
				Fill="Aqua"
				StrokeThickness="0"
				Height="1cm"
				Width="1cm"
				/>

		<TextBox x:Name="textBlock"
				Grid.Column="0"
				Grid.Row="0"
				Grid.RowSpan="2"
				Margin="5,5,0,10"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				FontFamily="Lucida Console"
				FontSize="14"
				Background="#FF2C2C2C"
				Foreground="White"
				IsReadOnly="True"
				Text="{Binding message}"
				TextAlignment="Left"
				TextWrapping="Wrap"
				/>
		<Button x:Name="btn_exit"
				Content="Exit"
				Grid.Column="1"
				Grid.Row="1"
				Margin="0,0,10,10"
				Width="80"
				Height="30"
				HorizontalAlignment="Right"
				VerticalAlignment="Bottom"
				Click="Btn_exit_Click"
				/>
		<Button x:Name="btn_showLocation"
				Grid.Column="1"
				Grid.Row="1"
				Margin="0,0,10,45"
				Width="80"
				Height="30"
				HorizontalAlignment="Right"
				VerticalAlignment="Bottom"
				Click="Btn_showLocation_Click"
				>
			<Button.Content>
				<TextBlock
						FontSize="10"
						Text="Display&#xA;Info"
						TextAlignment="Center"
						/>
			</Button.Content>
		</Button>
	</Grid>
</Window>
